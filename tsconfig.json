{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "types": []
    },
    "include": [
        "assets/**/*.ts",
        "assets/**/*.vue",
        "assets/**/*.d.ts",
    ]
}
