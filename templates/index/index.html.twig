{% extends 'base.html.twig' %}

{% block title %}Start{% endblock %}

{% block content %}
    <div class="content-grid">
        <div>
            <div {{ vue_component('AsyncBlTable', {
                apiUrl: config.get('BL1_TABLE_API_URL')
            }) }}></div>
        </div>
        <div class="matchday-container">
            <div class="matchday"
                {{ vue_component('Matchday', {
                    games: currentMatchdayGames,
                    matchday: currentMatchday,
                    bet: currentPlayerBet,
                    interaction: true,
                    userId: app.user is not null ? app.user.id : null
                }) }}></div>
            <div class="matchday"
                {{ vue_component('Matchday', {
                    games: lastMatchdayGames,
                    matchday: lastMatchday,
                    interaction: false
                }) }}></div>
            <button>Alle Spiele</button>
        </div>
    </div>
{% endblock %}
