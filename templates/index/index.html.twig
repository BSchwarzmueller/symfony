{% extends 'base.html.twig' %}

{% block title %}Start{% endblock %}

{% block content %}
    <div class="content-grid">
        <div>
            <div {{ vue_component('AsyncBlTable', {
                apiUrl: config.get('BL1_TABLE_API_URL')
            }) }}></div>
        </div>
        <div class="matchday-container">
            {% if app.user %}
                <a href="{{ path('app.bets.show', { id: app.user.id }) }}">
                    <button class="button">Meine Wetten</button>
                </a>
            {% else %}
                <a href="{{ path('app.register') }}">
                    <button class="button">Registrieren</button>
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
